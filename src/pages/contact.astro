---
// src/pages/contact.astro
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Contact Us | Optimize Web Solutions"
  description="Get in touch with Optimize Web Solutions today for a free consultation on your web development project. Let's build something great together."
  ogImage="/images/contact-us-office.jpg"
>
  <!-- ───── Hero ───── -->
  <section
    data-hero
    class="container mx-auto max-w-screen-xl px-4 py-20 text-center -mt-24"
  >
    <h1 class="text-4xl font-bold sm:text-5xl lg:text-6xl">Contact&nbsp;Us</h1>
    <p class="mx-auto mt-6 max-w-2xl text-muted-text text-lg">
      Have a question or ready to start a project? Pick the channel that works
      best for you—we’ll reply within one business day.
    </p>
  </section>

  <!-- ───── Quick-access cards ───── -->
  <section class="container mx-auto max-w-screen-xl px-4 pb-20">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Phone -->
      <a
        href="tel:7035993188"
        class="group rounded-2xl bg-white/70 backdrop-blur-sm ring-1 ring-inset ring-black/5 dark:bg-white/5 dark:ring-white/10 shadow-lg shadow-black/5 dark:shadow-black/20 px-8 py-12 text-center transition duration-300 hover:-translate-y-1 hover:shadow-xl hover:ring-2 hover:ring-brand/40"
      >
        <!-- …icon and content unchanged… -->
      </a>
      <!-- Email -->
      <a
        href="mailto:matt@optimizewebsolutions.com"
        class="group rounded-2xl bg-white/70 backdrop-blur-sm ring-1 ring-inset ring-black/5 dark:bg-white/5 dark:ring-white/10 shadow-lg shadow-black/5 dark:shadow-black/20 px-8 py-12 text-center transition duration-300 hover:-translate-y-1 hover:shadow-xl hover:ring-2 hover:ring-brand/40"
      >
        <!-- …icon and content unchanged… -->
      </a>
      <!-- Address -->
      <a
        href="https://www.google.com/maps/place/11654+Plaza+America+Dr,+Reston,+VA+20190"
        rel="noopener"
        target="_blank"
        class="group rounded-2xl bg-white/70 backdrop-blur-sm ring-1 ring-inset ring-black/5 dark:bg-white/5 dark:ring-white/10 shadow-lg shadow-black/5 dark:shadow-black/20 px-8 py-12 text-center transition duration-300 hover:-translate-y-1 hover:shadow-xl hover:ring-2 hover:ring-brand/40"
      >
        <!-- …icon and content unchanged… -->
      </a>
    </div>
  </section>

  <!-- ───── Calendly CTA ───── -->
  <section class="container mx-auto max-w-screen-md px-4 pb-20 text-center">
    <!-- …unchanged… -->
  </section>

  <!-- ───── Google Map Embed ───── -->
  <section class="container mx-auto max-w-screen-xl px-4 pb-24">
    <!-- …unchanged… -->
  </section>
</Layout>
