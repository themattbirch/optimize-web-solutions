---
// src/pages/about.astro
import Layout from "../layouts/Layout.astro";
import ContentSection from "../components/ContentSection.astro"; // Assuming a reusable component.

const team = [
  {
    name: "Matt Birch",
    role: "Founder & Full-Stack Engineer",
    img: "/images/matt-birch-tan-shirt-headshot.png",
    bio: "Builder at heart with a writer’s clarity. Matt leads end-to-end product delivery—from UX and React front-ends to Node/Supabase back-ends—turning ideas into reliable, scalable software.",
  },
  {
    name: "Alex Chernoff",
    role: "Web Developer",
    img: "/images/alex_chernoff_sweater_headshot.png",
    bio: "Alex blends sleek micro-interactions with thoughtful front-end architecture. Outside work: cold brew, pickleball, and Real Madrid highlights.",
  },
];
---

<Layout
  title="About | Optimize Web Solutions"
  description="A boutique product studio for founders and small teams. We design and build modern applications—MVPs, dashboards, and websites—on a reliable React/Node foundation."
  ogImage="/images/optimize-web-solutions-inside-office-computer.jpg"
>
  <section
    class="relative mx-auto max-w-screen-xl text-center px-4 sm:px-6 lg:px-8 py-20 lg:py-32"
  >
    <h1 class="font-heading text-5xl font-extrabold leading-tight md:text-6xl">
      Small studio. <br class="hidden md:inline" />Big outcomes.
    </h1>
    <p class="mx-auto mt-6 max-w-2xl text-lg text-muted-text md:text-xl">
      We’re a hands-on product studio that ships working software fast.
      Builder-direct communication, lean process, and deliverables you can
      launch—without the big-agency overhead.
    </p>
  </section>

  <ContentSection>
    <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2 lg:gap-20">
      <div class="text-center lg:text-left">
        <h2
          class="font-heading text-3xl font-bold sm:text-4xl text-gray-900 dark:text-white"
        >
          A True Partnership, From Idea to Launch
        </h2>
        <p class="mt-6 text-lg text-gray-600 dark:text-gray-300">
          Work directly with the engineer shipping your product. No layers, no
          telephone game—just clear goals, rapid iterations, and steady progress
          you can see.
        </p>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
          From discovery and UX to architecture, development, and deploy, we
          keep scope tight and quality high—so your MVP lands on time and scales
          cleanly.
        </p>
      </div>

      <div class="flex items-center justify-center">
        <img
          class="w-full max-h-[360px] rounded-lg object-cover shadow-lg"
          src="/images/teamwork-collaboration-talking-office.jpg"
          alt="Collaborating on product design and development."
          loading="lazy"
        />
      </div>
    </div>
  </ContentSection>

  {/* ───── Performance by Design ───── */}
  <ContentSection class="bg-slate-50 dark:bg-gray-900">
    <div class="text-center">
      <h2
        class="font-heading text-3xl font-bold sm:text-4xl text-gray-900 dark:text-white"
      >
        Design Meets Speed
      </h2>
      <p
        class="mx-auto mt-16 max-w-2xl text-lg text-gray-600 dark:text-gray-300"
      >
        Clean UX, fast loads, stable releases. Our performance-first approach
        improves user experience, search visibility, and conversion—across
        devices and network conditions.
      </p>
    </div>

    <div
      class="mt-16 grid grid-cols-1 gap-8 text-left lg:grid-cols-3 lg:gap-12"
    >
      <!-- Card 1: React -->
      <div
        class="rounded-lg
        border
        border-slate-200
        bg-white
        p-6
        shadow-sm
        dark:border-slate-700
        dark:bg-slate-800
        transition-transform
        duration-300
        ease-out
        hover:-translate-y-2
        hover:shadow-md
        hover:border-orange-400"
      >
        <h3 class="text-lg font-bold text-gray-900 dark:text-white">React</h3>
        <p class="mt-2 text-gray-600 dark:text-gray-300">
          Component-driven UIs with smooth interactions and thoughtful state
          management—built for clarity, reuse, and speed.
        </p>
      </div>

      <!-- Card 2: Astro -->
      <div
        class="rounded-lg
        border
        border-slate-200
        bg-white
        p-6
        shadow-sm
        dark:border-slate-700
        dark:bg-slate-800
        transition-transform
        duration-300
        ease-out
        hover:-translate-y-2
        hover:shadow-md
        hover:border-orange-400"
      >
        <h3 class="text-lg font-bold text-gray-900 dark:text-white">Astro</h3>
        <p class="mt-2 text-gray-600 dark:text-gray-300">
          Server-first rendering and lean bundles for instant first paint,
          better SEO, and less JavaScript where you don’t need it.
        </p>
      </div>

      <!-- Card 3: TypeScript -->
      <div
        class="rounded-lg
        border
        border-slate-200
        bg-white
        p-6
        shadow-sm
        dark:border-slate-700
        dark:bg-slate-800
        transition-transform
        duration-300
        ease-out
        hover:-translate-y-2
        hover:shadow-md
        hover:border-orange-400"
      >
        <h3 class="text-lg font-bold text-gray-900 dark:text-white">
          TypeScript
        </h3>
        <p class="mt-2 text-gray-600 dark:text-gray-300">
          Static typing catches errors early and keeps codebases maintainable—so
          features ship faster and regressions stay rare.
        </p>
      </div>
    </div>
  </ContentSection>

  <section class="py-20 sm:py-24">
    <div class="container mx-auto max-w-6xl px-4">
      <h2 class="text-center text-3xl font-bold sm:text-4xl font-heading mb-12">
        Meet the team
      </h2>
      <div class="grid gap-12 sm:grid-cols-2 lg:gap-16">
        {
          team.map(({ name, role, img, bio }) => (
            <article class="flex flex-col items-center text-center space-y-4">
              <img
                src={img}
                alt={name}
                class="h-44 w-44 rounded-full object-cover shadow-lg"
                loading="lazy"
              />
              <div class="flex flex-col items-center">
                <h3 class="text-xl font-bold">{name}</h3>
                <p class="text-muted-text mb-2">{role}</p>
                <p class="max-w-xs">{bio}</p>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section class="dark:bg-gray-900">
    <div
      class="container mx-auto flex flex-col items-center gap-6 px-4 py-16 text-center"
    >
      <h2 class="text-3xl font-semibold text-gray-900 dark:text-white">
        Ready to ship your application?
      </h2>
      <p class="max-w-2xl text-gray-700 dark:text-gray-300">
        Schedule a quick, no-pressure chat. We’ll scope the essentials and map
        the fastest path to a launch-ready build.
      </p>
      <a
        href="/contact"
        class="inline-block rounded-lg px-8 py-3 font-medium
        bg-gray-800 text-white dark:bg-gray-200 dark:text-gray-900
        transition-all duration-300 ease-out
        hover:scale-105 hover:shadow-lg hover:bg-black
        dark:hover:bg-white dark:hover:text-black"
      >
        Schedule a call
      </a>
    </div>
  </section>
</Layout>
