---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection.astro";
import ValueProp from "../components/ValueProp.astro";
import Differentiators from "../components/Differentiators.astro";
import PortfolioShowcase from "../components/PortfolioShowcase.astro";
import FinalCta from "../components/FinalCTA.astro";
---

<Layout
  title="Optimize Web Solutions | Custom Web Development for Small Businesses"
  description="Partner with Optimize Web Solutions to build a fast, modern, and SEO-friendly website for your small business."
  ogImage="/images/ows-devices-va-waterfront.jpg"
>
  <HeroSection data-hero class="-mt-24" />
  <div id="main" class="space-y-40 scroll-mt-24">
    {/* The 'main' content starts here, no need for a nested div */}
    <ValueProp />
    <Differentiators />
    <PortfolioShowcase />
  </div>

  <FinalCta />
</Layout>
