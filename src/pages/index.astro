---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection.astro";
import ValueProp from "../components/ValueProp.astro";
import Differentiators from "../components/Differentiators.astro";
import PortfolioShowcase from "../components/PortfolioShowcase.astro";
import FinalCta from "../components/FinalCTA.astro";
---

<Layout
  title="Optimize Web Solutions | Custom Web Development for Small Businesses"
  description="Partner with Optimize Web Solutions to build a fast, modern, and SEO-friendly website. We specialize in custom web development for small businesses in Northern Virginia."
  ogImage="/images/ows-devices-va-waterfront.jpg"
>
  {/* This section is now full-width by default */}
  <HeroSection />

  {
    /* The rest of the sections are wrapped in a container to keep them centered */
  }
  <div class="container mx-auto max-w-screen-xl px-4">
    <ValueProp />
    <Differentiators />
    <PortfolioShowcase />
  </div>

  <FinalCta />
</Layout>
