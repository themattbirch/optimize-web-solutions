---
// src/pages/services.astro
import Layout from "../layouts/Layout.astro";

/* ---------- DATA ARRAYS ---------- */
const coreServices = [
  {
    title: "Custom Web Design",
    iconBg: "bg-accent-primary/10",
    iconStroke: "text-accent-primary",
    bullets: [
      "Responsive, mobile-first layouts that look great on any device",
      "Core Web Vitals optimized for lightning-fast performance",
      "Accessible, SEO-ready markup to capture more organic traffic",
    ],
  },
  {
    title: "SEO & Growth Marketing",
    iconBg: "bg-accent-secondary/10",
    iconStroke: "text-accent-secondary",
    bullets: [
      "Data-driven keyword research and content strategy",
      "Google Business Profile setup and ongoing optimization",
      "Transparent monthly reports showing clear ROI metrics",
    ],
  },
  {
    title: "Performance Optimization",
    iconBg: "bg-accent-primary/10",
    iconStroke: "text-accent-primary",
    bullets: [
      "Comprehensive speed audits with actionable fixes",
      "Hosting and CDN tuning for maximum uptime and reliability",
      "Proactive monitoring and maintenance to keep your site running smoothly",
    ],
  },
];

const pricingPlans = [
  {
    name: "Starter Site",
    tagline: "Live in 14 business days—or less.",
    price: "$1,397",
    bullets: ["3 pages", "Cloud hosting + SSL", "Two stock images"],
    cta: "Get Started",
  },
  {
    name: "Growth Package",
    tagline: "Site + SEO foundation.",
    price: "$1,997",
    bullets: [
      "5 pages",
      "WordPress SEO setup",
      "Search-engine submission",
      "Everything in Starter",
    ],
    cta: "Get Started",
  },
  {
    name: "Custom Solution",
    tagline: "Tailored to your goals.",
    price: "CALL",
    bullets: ["Landing pages", "Copywriting", "Ongoing maintenance"],
    cta: "Request Quote",
  },
];
---

<Layout
  title="Our Services | Optimize Web Solutions"
  description="Explore our web-development stack: custom design, SEO, and performance tuning — all engineered for small-business growth."
  ogImage="/images/employee-optimize-web-solutions-typing-computer.jpg"
>
  {/* ───────── HERO ───────── */}
  <section
    class="relative mx-auto max-w-screen-xl text-center px-4 sm:px-6 lg:px-8 py-20 lg:py-32"
  >
    <h1
      class="font-heading text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl"
    >
      Services That Move the Needle
    </h1>
    <p
      class="mx-auto mt-8 max-w-2xl text-lg text-muted-text dark:text-white/80"
    >
      Innovative design, search visibility, and speed enhancements to transform
      your website into a sales engine.
    </p>
    <a
      href="/contact"
      class="mt-12 inline-flex items-center justify-center rounded-full bg-accent-primary px-8 py-3 font-semibold text-white shadow-lg transition hover:-translate-y-1 hover:bg-accent-primary/90 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-accent-primary/50"
    >
      Book a Free Consult
    </a>
  </section>

  {/* ───────── CORE SERVICES ───────── */}
  <section class="py-20 sm:py-24 lg:py-32">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
      <h2
        class="text-center font-heading text-3xl font-bold sm:text-4xl lg:text-5xl"
      >
        What We Do
      </h2>
      {/* Subtitle fix: Added dark mode text color */}
      <p
        class="mx-auto mt-8 max-w-2xl text-center text-muted-text dark:text-white/80"
      >
        Three expert services united to drive real growth for your small
        business.
      </p>

      <div
        class="mt-12 flex flex-wrap justify-center gap-8 lg:grid lg:grid-cols-3"
      >
        {
          coreServices.map((card) => (
            // Card container fix: Added dark:text-white to make all text inside it white in dark mode
            <div class="group flex w-full max-w-md flex-col rounded-xl bg-white/70 p-8 shadow transition-transform duration-300 hover:-translate-y-2 hover:shadow-xl dark:bg-white/5 dark:text-white md:w-[calc(50%-1rem)] lg:w-auto lg:max-w-none">
              <div
                class={`flex h-14 w-14 items-center justify-center rounded-full ${card.iconBg}`}
              >
                <svg
                  class={`h-6 w-6 ${card.iconStroke}`}
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 4v16m8-8H4"
                  />
                </svg>
              </div>
              <h3 class="mt-6 text-xl font-semibold">{card.title}</h3>
              {/* List fix: Removed the specific text-muted-text class to allow color inheritance */}
              <ul class="mt-4 flex flex-col gap-3 text-sm leading-relaxed text-gray-600 dark:text-inherit">
                {card.bullets.map((b) => (
                  <li class="flex gap-2">
                    <span>✅</span> {b}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {/* ───────── PRICING ───────── */}
  <section class="bg-gray-100 py-20 dark:bg-background/70 sm:py-24 lg:py-32">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
      <h2
        class="text-center font-heading text-3xl font-bold sm:text-4xl lg:text-5xl"
      >
        Transparent Pricing — No Monthly Fees
      </h2>

      {/* ▼▼▼▼▼ UPDATED CONTAINER ▼▼▼▼▼ */}
      <div
        class="mt-12 flex flex-wrap justify-center gap-8 lg:grid lg:grid-cols-3"
      >
        {
          pricingPlans.map((plan) => (
            // ▼▼▼▼▼ UPDATED CARD ▼▼▼▼▼
            <div class="flex w-full max-w-md flex-col gap-6 rounded-xl border border-white/10 bg-white p-8 shadow transition-transform lg:hover:-translate-y-2 lg:hover:shadow-xl dark:bg-background/50 dark:text-white md:w-[calc(50%-1rem)] lg:w-auto lg:max-w-none">
              <header class="space-y-2">
                <h3 class="text-xl font-semibold">{plan.name}</h3>
                <p class="text-muted-text">{plan.tagline}</p>
              </header>

              <span class="text-4xl font-bold tracking-tight">
                {plan.price}
              </span>

              <ul class="flex flex-col gap-3 text-sm leading-relaxed">
                {plan.bullets.map((b) => (
                  <li class="flex gap-2">✅ {b}</li>
                ))}
              </ul>

              <a
                href="/contact"
                class="mt-auto inline-flex items-center justify-center rounded-full bg-accent-primary px-6 py-3 font-medium text-white shadow transition hover:-translate-y-1 hover:bg-accent-primary/90 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-accent-primary/50"
              >
                {plan.cta}
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {/* ───────── FINAL CTA ───────── */}
  <section
    id="final-cta"
    class="relative overflow-hidden text-center text-gray-800 dark:text-white"
  >
    {/* Base fill + subtle dark-mode noise */}
    <div
      class="absolute inset-0 -z-30 bg-white dark:bg-[#121212] dark:pattern-bg"
    >
    </div>

    {/* Radial spotlight behind content */}
    <div
      class="pointer-events-none absolute inset-0 -z-20"
      style="background: radial-gradient(circle at center, rgba(255,153,0,0.16) 0%, transparent 65%);"
    >
    </div>

    {/* Top wave divider */}
    <div class="absolute top-0 left-0 w-full overflow-hidden leading-[0] -z-10">
      <svg
        class="relative block h-[60px] w-[calc(140%+1px)] -translate-x-[20%] fill-[#f3f4f6] dark:fill-[#121212] sm:h-[100px]"
        viewBox="0 0 1440 100"
        preserveAspectRatio="none"
      >
        <path
          d="M0,100 C240,90 480,20 720,20 C960,20 1200,90 1440,100 L1440,0 L0,0 Z"
        ></path>
      </svg>
    </div>

    {/* Bottom wave divider */}
    <div
      class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0] -z-10 rotate-180"
    >
      <svg
        class="relative block h-[80px] w-[calc(140%+1px)] -translate-x-[20%] fill-white dark:fill-[#121212] sm:h-[120px]"
        viewBox="0 0 1440 100"
        preserveAspectRatio="none"
      >
        <path
          d="M0,100 C240,90 480,20 720,20 C960,20 1200,90 1440,100 L1440,0 L0,0 Z"
        ></path>
      </svg>
    </div>

    <div
      class="relative mx-auto max-w-2xl px-4 pt-20 pb-12 sm:px-6 sm:pt-24 sm:pb-18 md:pt-28 md:pb-20 lg:pt-32 lg:pb-24"
    >
      <h2
        class="font-heading text-3xl font-extrabold tracking-tight sm:text-4xl lg:text-5xl"
      >
        Ready to Scale Your Business?
      </h2>
      <p class="mx-auto mt-6 max-w-lg text-base sm:text-lg">
        Schedule a quick chat about how we can make your website improve your
        bottom line.
      </p>
      <a
        href="/contact"
        class="mt-8 inline-flex items-center justify-center rounded-full bg-[#ff5200] px-8 py-3 text-base font-semibold text-white shadow-lg ring-2 ring-transparent transition duration-300 hover:-translate-y-1 hover:bg-[#ff6b00] hover:shadow-xl"
      >
        Book a Call
      </a>
    </div>
  </section>
</Layout>
