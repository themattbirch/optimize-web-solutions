---
// src/pages/services.astro
import Layout from "../layouts/Layout.astro";

/* ---------- DATA ARRAYS ---------- */
const coreServices = [
  {
    title: "Website Design & Development",
    iconBg: "bg-accent-primary/10",
    iconStroke: "text-accent-primary",
    bullets: [
      "Strategy, UX, design, and development—from kickoff to launch",
      "Clean, responsive layouts built for clarity, accessibility, and usability",
      "Performance-focused builds that support SEO and fast load times",
    ],
  },
  {
    title: "CMS & Content-Driven Websites",
    iconBg: "bg-accent-secondary/10",
    iconStroke: "text-accent-secondary",
    bullets: [
      "WordPress and modern CMS setups tailored to your content needs",
      "Thoughtful content structure for easy updates and long-term maintainability",
      "Secure, reliable foundations that grow with your business",
    ],
  },
  {
    title: "Performance, SEO & Optimization",
    iconBg: "bg-accent-primary/10",
    iconStroke: "text-accent-primary",
    bullets: [
      "Fast, accessible websites built with SEO best practices in mind",
      "Analytics-ready setups to measure engagement and site performance",
      "Ongoing improvements to keep your site healthy and effective",
    ],
  },
];

const pricingPlans = [
  {
    name: "Website & Digital Experience Builds",
    tagline:
      "Strategy, UX, and implementation for modern, content-driven websites.",
    price: "From $2,500 – $6,500",
    bullets: [
      "Discovery & content structure",
      "UX & page architecture",
      "CMS setup (WordPress / headless)",
      "Performance, accessibility, SEO foundations",
      "Deployment + handoff",
    ],
    cta: "Start a Website Project",
  },
  {
    name: "Dashboards, Analytics & Internal Tools",
    tagline:
      "Custom dashboards, reporting tools, and integrations that turn data into clarity.",
    price: "From $3,500",
    bullets: [
      "Analytics architecture (GA4, GTM, custom events)",
      "Admin panels & dashboards",
      "Secure APIs & role-based access",
      "Performance & reliability tuning",
    ],
    cta: "Request an Estimate",
  },
  {
    name: "Ongoing Support & Optimization",
    tagline:
      "Continuous improvement for websites and tools that need stability and care.",
    price: "From $499 / month",
    bullets: [
      "Content & UX refinements",
      "Performance monitoring",
      "SEO & analytics support",
      "Small feature iterations",
      "Priority support",
    ],
    cta: "Discuss a Partnership",
  },
];
---

<Layout
  title="Our Services | Optimize Web Solutions"
  description="Explore our web-development stack: custom design, SEO, and performance tuning — all engineered for small-business growth."
  ogImage="/images/employee-optimize-web-solutions-typing-computer.jpg"
>
  {/* ───────── HERO ───────── */}
  <section
    class="relative mx-auto max-w-screen-xl text-center px-4 sm:px-6 lg:px-8 py-20 lg:py-32"
  >
    <h1
      class="font-heading text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl"
    >
      Build the Right Website—Then Launch with Confidence
    </h1>
    <p
      class="mx-auto mt-8 max-w-2xl text-lg text-muted-text dark:text-white/80"
    >
      We design and build modern websites for small businesses, combining clear
      UX, solid technical foundations, and direct collaboration—without agency
      overhead or unnecessary complexity.
    </p>
    <a
      href="/contact"
      class="mt-12 inline-flex items-center justify-center rounded-xl bg-accent-primary
         px-10 py-4 text-lg font-semibold text-white shadow-lg
         transition-all duration-300
         hover:-translate-y-1 hover:scale-105 hover:bg-accent-primary/90 hover:shadow-xl
         focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-accent-primary/40"
    >
      Start a Project Conversation
    </a>
  </section>

  {/* ───────── CORE SERVICES ───────── */}
  <section class="py-20 sm:py-24 lg:py-32">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
      <h2
        class="text-center font-heading text-3xl font-bold sm:text-4xl lg:text-5xl"
      >
        What We Do
      </h2>
      {/* Subtitle fix: Added dark mode text color */}
      <p
        class="mx-auto mt-8 max-w-2xl text-center text-muted-text dark:text-white/80"
      >
        Three focused services to help you plan, build, and maintain a modern
        website.
      </p>

      <div
        class="mt-12 flex flex-wrap justify-center gap-8 lg:grid lg:grid-cols-3"
      >
        {
          coreServices.map((card) => (
            // Card container fix: Added dark:text-white to make all text inside it white in dark mode
            <div class="group flex w-full max-w-md flex-col rounded-xl bg-white/70 p-8 shadow transition-transform duration-300 hover:-translate-y-2 hover:shadow-xl dark:bg-white/5 dark:text-white md:w-[calc(50%-1rem)] lg:w-auto lg:max-w-none hover:border-orange-400 border border-slate-200 dark:border-slate-700">
              <div
                class={`flex h-14 w-14 items-center justify-center rounded-full ${card.iconBg}`}
              >
                <svg
                  class={`h-6 w-6 ${card.iconStroke}`}
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 4v16m8-8H4"
                  />
                </svg>
              </div>
              <h3 class="mt-6 text-xl font-semibold">{card.title}</h3>
              <ul class="mt-4 flex flex-col gap-3 text-sm leading-relaxed text-gray-600 dark:text-inherit">
                {card.bullets.map((b) => (
                  <li class="flex gap-2">
                    <span>✅</span> {b}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {/* ───────── PRICING ───────── */}
  <section class="bg-gray-100 py-20 dark:bg-background/70 sm:py-24 lg:py-32">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
      <h2
        class="text-center font-heading text-3xl font-bold sm:text-4xl lg:text-5xl"
      >
        Clear Engagements, Built Around Your Goals
      </h2>

      {/* ▼▼▼▼▼ UPDATED CONTAINER ▼▼▼▼▼ */}
      <div
        class="mt-12 flex flex-wrap justify-center gap-8 lg:grid lg:grid-cols-3"
      >
        {
          pricingPlans.map((plan) => (
            // ▼▼▼▼▼ UPDATED CARD ▼▼▼▼▼
            <div class="flex w-full max-w-md flex-col gap-6 rounded-xl border border-white/10 bg-white p-8 shadow transition-transform lg:hover:-translate-y-2 lg:hover:shadow-xl dark:bg-background/50 dark:text-white md:w-[calc(50%-1rem)] lg:w-auto lg:max-w-none">
              <header class="space-y-2">
                <h3 class="text-xl font-semibold">{plan.name}</h3>
                <p class="text-muted-text">{plan.tagline}</p>
              </header>

              <span class="text-4xl font-bold tracking-tight">
                {plan.price}
              </span>

              <ul class="flex flex-col gap-3 text-sm leading-relaxed">
                {plan.bullets.map((b) => (
                  <li class="flex gap-2">✅ {b}</li>
                ))}
              </ul>

              <a
                href="/contact"
                class="mt-auto inline-flex items-center justify-center rounded-full bg-accent-primary px-6 py-3 font-medium text-white shadow transition hover:-translate-y-1 hover:bg-accent-primary/90 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-accent-primary/50 transition-all duration-300 ease-out hover:shadow-lg hover:scale-105"
              >
                {plan.cta}
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {/* ───────── FINAL CTA ───────── */}
  <section
    id="final-cta"
    class="relative overflow-hidden text-center text-gray-800 dark:text-white"
  >
    {/* Base fill + subtle dark-mode noise */}
    <div
      class="absolute inset-0 -z-30 bg-white dark:bg-[#121212] dark:pattern-bg"
    >
    </div>

    {/* White spacer above CTA (no wave) */}
    <div class="relative h-16 sm:h-24 -z-10 bg-white dark:bg-[#121212]"></div>

    {/* Radial spotlight behind content */}
    <div
      class="pointer-events-none absolute inset-0 -z-20"
      style="background: radial-gradient(circle at center, rgba(255,153,0,0.35) 0%, rgba(255,153,0,0.15) 50%, transparent 95%);"
    >
    </div>

    {/* Bottom wave divider */}
    <div
      class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0] -z-10 rotate-180"
    >
      <svg
        class="relative block h-[64px] w-[calc(125%+1px)] -translate-x-[12.5%] fill-white dark:fill-[#121212] sm:h-[96px]"
        viewBox="0 0 1440 100"
        preserveAspectRatio="none"
      >
        <path
          d="M0,100 C240,85 480,35 720,35 C960,35 1200,85 1440,100 L1440,0 L0,0 Z"
        ></path>
      </svg>
    </div>

    <div
      class="relative mx-auto w-full max-w-6xl px-6 pt-24 pb-20 sm:px-8 md:pt-28 md:pb-24 lg:px-12"
    >
      <h2
        class="mx-auto max-w-4xl font-heading text-3xl font-extrabold tracking-tight sm:text-4xl lg:text-5xl"
      >
        Let's Talk About Your Website Project
      </h2>
      <p class="mx-auto mt-6 max-w-2xl text-lg sm:text-xl">
        Schedule a quick, no-pressure call to discuss your goals, priorities,
        and the best path forward for a modern, well-built website.
      </p>
      <a
        href="/contact"
        class="mt-10 inline-flex items-center justify-center rounded-xl bg-[#ff5200] px-10 py-4 text-lg font-semibold text-white shadow-lg ring-2 ring-transparent transition-all duration-300 hover:-translate-y-1 hover:bg-[#ff6b00] hover:shadow-xl hover:scale-105"
      >
        Get in Touch
      </a>
    </div>
  </section>
</Layout>
