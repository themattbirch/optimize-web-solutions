---
import Layout from "../layouts/Layout.astro";

/* ---------- DATA ARRAYS ---------- */
const coreServices = [
  {
    title: "Custom Web Design",
    iconBg: "bg-accent-primary/10",
    iconStroke: "text-accent-primary",
    bullets: [
      "Mobile-first layouts",
      "Lightning-fast Core Web Vitals",
      "Accessible & SEO-ready markup",
    ],
  },
  {
    title: "SEO & Growth Marketing",
    iconBg: "bg-accent-secondary/10",
    iconStroke: "text-accent-secondary",
    bullets: [
      "Keyword & content strategy",
      "GBP setup & optimization",
      "Transparent monthly reports",
    ],
  },
  {
    title: "Performance Optimization",
    iconBg: "bg-accent-primary/10",
    iconStroke: "text-accent-primary",
    bullets: [
      "Speed audits & fixes",
      "Hosting & CDN tuning",
      "Ongoing maintenance",
    ],
  },
];

const pricingPlans = [
  {
    name: "Starter Site",
    tagline: "Launch-ready in weeks.",
    price: "$1,497",
    bullets: ["3 pages", "Cloud hosting + SSL", "Two stock images"],
    cta: "Get Started",
  },
  {
    name: "Growth Package",
    tagline: "Site + SEO foundation.",
    price: "$2,397",
    bullets: [
      "5 pages",
      "WordPress SEO setup",
      "Search-engine submission",
      "Everything in Starter",
    ],
    cta: "Get Started",
  },
  {
    name: "Custom Solution",
    tagline: "Tailored to your goals.",
    price: "CALL",
    bullets: ["Landing pages", "Copywriting", "Ongoing maintenance"],
    cta: "Request Quote",
  },
];
---

<Layout
  title="Our Services | Optimize Web Solutions"
  description="Explore our web-development stack: custom design, SEO, and performance tuning — all engineered for small-business growth."
  ogImage="/images/employee-optimize-web-solutions-typing-computer.jpg"
>
  <!-- ───────── HERO ───────── -->
  <section
    data-hero
    class="relative isolate -mt-24 overflow-hidden
         bg-white dark:bg-background
         text-foreground dark:text-white text-center"
  >
    <!-- top wave -->
    <svg
      class="absolute top-0 left-0 w-full rotate-180
            fill-white dark:fill-[#121212]"
      viewBox="0 0 1440 80"
      preserveAspectRatio="none"
    >
      <path
        d="M0,64L60,58C120,53,240,43,360,48C480,53,600,75,720,80C840,85,960,75,1080,64C1200,53,1320,43,1380,37L1440,32V0H0Z"
      ></path>
    </svg>

    <div
      class="relative mx-auto max-w-screen-xl px-4 py-28 sm:px-6 md:py-32 lg:py-40"
    >
      <h1
        class="font-heading text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl"
      >
        Services That Move the Needle
      </h1>

      <p
        class="mx-auto mt-4 max-w-2xl text-lg
              text-muted-text dark:text-white/80"
      >
        Design, optimization, and marketing solutions that transform your
        website into a 24/7 growth engine.
      </p>

      <a
        href="/contact"
        class="mt-10 inline-flex items-center justify-center rounded-full
             bg-accent-primary px-8 py-3 font-semibold text-white shadow-lg
             transition hover:-translate-y-1 hover:bg-accent-primary/90
             focus-visible:outline-none focus-visible:ring-4
             focus-visible:ring-accent-primary/50"
      >
        Book a Free Consult
      </a>
    </div>
  </section>

  <!-- ───────── CORE SERVICES ───────── -->
  <section class="py-20 sm:py-24 lg:py-32">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
      <h2
        class="text-center font-heading text-3xl font-bold sm:text-4xl lg:text-5xl"
      >
        What We Do
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-center text-muted-text">
        Three pillars, one goal: measurable business growth.
      </p>

      <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          coreServices.map((card) => (
            <div class="group flex flex-col rounded-xl bg-white/70 p-8 shadow transition-transform duration-300 hover:-translate-y-2 hover:shadow-xl dark:bg-white/5">
              <div
                class={`flex h-14 w-14 items-center justify-center rounded-full ${card.iconBg}`}
              >
                <svg
                  class={`h-6 w-6 ${card.iconStroke}`}
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 4v16m8-8H4"
                  />
                </svg>
              </div>

              <h3 class="mt-6 text-xl font-semibold">{card.title}</h3>

              <ul class="mt-4 flex flex-col gap-2 text-sm leading-relaxed text-muted-text">
                {card.bullets.map((b) => (
                  <li class="flex gap-2">
                    <span>✅</span> {b}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- ───────── PRICING ───────── -->
  <section class="py-20 sm:py-24 lg:py-32 bg-gray-100 dark:bg-background/70">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
      <h2
        class="text-center font-heading text-3xl font-bold sm:text-4xl lg:text-5xl"
      >
        Transparent Pricing — No Monthly Fees
      </h2>

      <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          pricingPlans.map((plan) => (
            <div class="flex flex-col rounded-xl border border-white/10 bg-white/70 p-8 shadow transition-transform lg:hover:-translate-y-2 lg:hover:shadow-xl dark:bg-background/50 dark:text-white">
              <h3 class="text-xl font-semibold">{plan.name}</h3>
              <p class="mt-2 text-muted-text">{plan.tagline}</p>
              <span class="mt-6 text-4xl font-bold tracking-tight">
                {plan.price}
              </span>

              <ul class="mt-6 flex flex-col gap-2 text-sm leading-relaxed">
                {plan.bullets.map((b) => (
                  <li class="flex gap-2">✅ {b}</li>
                ))}
              </ul>

              <a
                href="/contact"
                class="mt-auto inline-flex items-center justify-center rounded-full bg-accent-primary px-6 py-3 font-medium text-white shadow transition hover:-translate-y-1 hover:bg-accent-primary/90 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-accent-primary/50"
              >
                {plan.cta}
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- ───────── FINAL CTA ───────── -->
  <section
    id="final-cta"
    class="relative overflow-hidden text-center text-background dark:text-background"
  >
    <!-- Gradient backdrop -->
    <div
      class="absolute inset-0 -z-30 bg-gradient-to-tr from-[#ff6b00] via-[#ff7700] to-[#ff5200]"
    >
    </div>

    <!-- Top wave (merges into pricing section above) -->
    <div class="absolute top-0 left-0 w-full overflow-hidden leading-[0] -z-20">
      <svg
        class="relative block w-[calc(140%+1px)] fill-white dark:fill-[#121212] h-[60px] sm:h-[100px] -translate-x-[20%] fill-[#121212]"
        viewBox="0 0 1440 100"
        preserveAspectRatio="none"
      >
        <path
          d="M0,100 C240,90 480,20 720,20 C960,20 1200,90 1440,100 L1440,0 L0,0 Z"
        ></path>
      </svg>
    </div>

    <!-- Bottom wave (flows into the footer) -->
    <div
      class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0] -z-20 rotate-180"
    >
      <svg
        class="relative block fill-white dark:fill-[#121212] w-[calc(140%+1px)] h-[60px] sm:h-[100px] -translate-x-[20%] fill-[#121212]"
        viewBox="0 0 1440 100"
        preserveAspectRatio="none"
      >
        <path
          d="M0,100 C240,90 480,20 720,20 C960,20 1200,90 1440,100 L1440,0 L0,0 Z"
        ></path>
      </svg>
    </div>

    <!-- Content -->
    <div
      class="relative mx-auto max-w-2xl px-4 py-20 sm:px-6 sm:py-24 md:py-28 lg:py-32"
    >
      <h2
        class="font-heading text-3xl font-extrabold tracking-tight sm:text-4xl lg:text-5xl"
      >
        Ready to Scale Your Business?
      </h2>
      <p class="mx-auto mt-6 max-w-lg text-base sm:text-lg">
        Let’s talk about turning your website into your strongest sales asset.
      </p>
      <a
        href="/contact"
        class="mt-8 inline-flex items-center justify-center rounded-full bg-background/90 px-8 py-3 text-base font-semibold text-[#ff5200] shadow-lg ring-2 ring-background transition-all duration-300 hover:-translate-y-1 hover:bg-transparent hover:text-background hover:shadow-xl dark:hover:text-background"
      >
        Book a Call
      </a>
    </div>
  </section>
</Layout>
