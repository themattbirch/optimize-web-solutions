---
// src/components/HeroSection.astro
import { Image } from "astro:assets";
import heroBackgroundImage from "../assets/images/ows-hero-image.jpg";

// Grab any passed-in props (like class, data-hero, etc.)
const { class: extraClasses = "", ...rest } = Astro.props;
---

<section
  class={`relative text-white ${extraClasses}`}
  {...rest}
>
  {/* --- BACKGROUND LAYERS --- */}
  {/* The order here matters. The item that comes last will be on top. */}

  {/* Layer 1 (Bottom): A solid dark color. This renders instantly and COVERS the orange shape. */}
  <div class="absolute inset-0 bg-gray-950"></div>

  {/* Layer 2 (Middle): Your background image. This sits on top of the solid color. */}
  <Image
    src={heroBackgroundImage}
    alt="A modern, abstract background representing web solutions."
    class="absolute inset-0 h-full w-full object-cover object-top"
  />

  {/* Layer 3 (Top): A darkening gradient to place over the image for text readability. */}
  <div class="absolute inset-0 bg-gradient-to-t from-background/80 to-background/30"></div>

  {/* --- CONTENT LAYER --- */}
  {/* `position: relative` lifts this content on top of all the absolute background layers. */}
  <div class="relative mx-auto max-w-screen-xl px-4 py-32 sm:px-6 lg:flex lg:h-screen lg:items-center lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h1 class="font-heading text-4xl font-extrabold sm:text-6xl text-shadow-lg max-w-prose mx-auto">
        Modern Web Design<span class="sm:block"> With a Creative Spin.</span>
      </h1>
      <p class="mx-auto mt-6 max-w-xl sm:text-xl/relaxed text-white/90">
        We build user-friendly, high-performance websites that differentiate
        your business from the competition.
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a
          href="/contact"
          class="block w-full rounded-lg bg-accent-primary px-12 py-4 text-lg font-bold text-background shadow transition-transform duration-300 hover:scale-105 hover:bg-orange-600 focus:outline-none focus:ring sm:w-auto"
        >
          Get Help Now
        </a>
        <a
          href="/services"
          class="block w-full rounded-lg border border-accent-secondary px-12 py-4 text-lg font-medium text-accent-secondary shadow transition-transform duration-300 hover:scale-105 hover:bg-accent-secondary hover:text-background focus:outline-none focus:ring sm:w-auto"
        >
          Learn More
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .text-shadow-lg {
    text-shadow: 0 2px 15px rgba(0, 0, 0, 0.5);
  }
</style>
