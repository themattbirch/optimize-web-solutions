---
// src/components/Footer.astro
import { Image } from "astro:assets";
import darkLogo from "../assets/images/optimize-web-solutions-logo.png";
import lightLogo from "../assets/images/optimize-web-solutions-logo-light.webp";

const currentYear = new Date().getFullYear();
---

{/* 2. Set a default light background and a dark: variant for the background */}
<footer class="bg-slate-100 dark:bg-background mt-24">
  <div class="container mx-auto max-w-screen-xl px-4 py-16">
    {/* Three equal columns  */}
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3">
      {/* Brand / Tagline  */}
      <div
        class="flex flex-col items-center md:items-start text-center md:text-left"
      >
        <a href="/" class="mb-4">
          {/* 3. Conditionally render logos */}
          <Image
            src={lightLogo}
            alt="Optimize Web Solutions Logo"
            width="180"
            class="block dark:hidden"
          />
          <Image
            src={darkLogo}
            alt="Optimize Web Solutions Logo"
            width="180"
            class="hidden dark:block"
          />
        </a>
        {/* 4. Update text color for light/dark modes */}
        <p class="text-slate-600 dark:text-muted-text">
          Building fast, modern, and optimized websites for small businesses.
        </p>
      </div>

      {/* Quick Links (centered column)  */}
      <div class="flex flex-col items-center text-center">
        <h3
          class="font-heading text-lg font-semibold text-slate-900 dark:text-white"
        >
          Quick Links
        </h3>
        <ul class="mt-4 space-y-2">
          <li>
            <a
              href="/"
              class="text-slate-600 dark:text-muted-text hover:text-accent-secondary transition"
              >Home</a
            >
          </li>
          <li>
            <a
              href="/about"
              class="text-slate-600 dark:text-muted-text hover:text-accent-secondary transition"
              >About</a
            >
          </li>
          <li>
            <a
              href="/services"
              class="text-slate-600 dark:text-muted-text hover:text-accent-secondary transition"
              >Services</a
            >
          </li>
          <li>
            <a
              href="/contact"
              class="text-slate-600 dark:text-muted-text hover:text-accent-secondary transition"
              >Contact Us</a
            >
          </li>
        </ul>
      </div>

      {/* Social (right-aligned on md+)  */}
      <div
        class="flex flex-col items-center md:items-end text-center md:text-right"
      >
        <h3
          class="font-heading text-lg font-semibold text-slate-900 dark:text-white"
        >
          Follow Us
        </h3>
        <div class="mt-4 flex gap-x-6">
          {/* Facebook */}
          <a
            href="https://facebook.com/optimizewebsitenow/"
            aria-label="Facebook"
            class="text-slate-600 dark:text-muted-text hover:text-accent-secondary transition"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.494v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"
              ></path>
            </svg>
          </a>

          {/* X / Twitter */}
          <a
            href="https://x.com/optimizewebnow"
            aria-label="Twitter"
            class="text-slate-600 dark:text-muted-text hover:text-accent-secondary transition"
          >
            <svg
              class="w-6 h-6"
              fill="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
              ></path>
            </svg>
          </a>

          {/* YouTube */}
          <a
            href="https://youtube.com/@optimizewebsolutions"
            aria-label="YouTube"
            class="text-slate-600 dark:text-muted-text hover:text-accent-secondary transition"
          >
            <svg
              class="w-6 h-6"
              fill="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M22.54 6.42a2.78 2.78 0 0 0-1.95-2 48.2 48.2 0 0 0-9.59-.4 48.8 48.8 0 0 0-9.59.4 2.78 2.78 0 0 0-1.95 2 29.94 29.94 0 0 0-.46 5.58 29.94 29.94 0 0 0 .46 5.58 2.78 2.78 0 0 0 1.95 2 48.8 48.8 0 0 0 9.59.4 48.2 48.2 0 0 0 9.59-.4 2.78 2.78 0 0 0 1.95-2 29.94 29.94 0 0 0 .46-5.58 29.94 29.94 0 0 0-.46-5.58zM9.75 15.02V8.98l6.29 3.02-6.29 3.02z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    {/* Footer bottom  */}
    {/* 5. Update border color for light/dark modes */}
    <div
      class="mt-16 border-t border-slate-300 dark:border-muted-text/20 pt-8 text-center"
    >
      <p class="text-slate-600 dark:text-muted-text">
        Â© {currentYear} Optimize Web Solutions. All Rights Reserved.
      </p>
    </div>
  </div>
</footer>
