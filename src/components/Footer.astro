---
// src/components/Footer.astro
import { Image } from "astro:assets";
import darkLogo from "../assets/images/optimize-web-solutions-logo.png";
import lightLogo from "../assets/images/optimize-web-solutions-logo-light.webp";

const year = new Date().getFullYear();
---

<footer
  class="relative
         mt-[72px]
         before:content-[''] before:absolute before:-top-[72px] before:inset-x-0 before:h-[72px]
         before:bg-white/5 before:dark:hidden
         bg-slate-100 dark:bg-background text-slate-700 dark:text-muted-text"
>
  <!-- ───────────── TOP SECTION ───────────── -->
  <div
    class="mx-auto max-w-screen-xl px-4 py-16 grid gap-12
              grid-cols-1 sm:grid-cols-2 md:grid-cols-3"
  >
    <!-- Brand -->
    <div
      class="flex flex-col items-center md:items-start text-center md:text-left"
    >
      <a
        href="/"
        class="mb-4 inline-block"
        aria-label="Optimize Web Solutions – Home"
      >
        <Image src={lightLogo} alt="" width="180" class="block dark:hidden" />
        <Image src={darkLogo} alt="" width="180" class="hidden dark:block" />
      </a>
      <p class="max-w-xs leading-relaxed">
        Your partner for modern, fast-loading websites built with clarity and
        care.
      </p>
    </div>

    <!-- Quick Links -->
    <nav
      class="flex flex-col items-center text-center md:items-center"
      aria-label="Footer"
    >
      <h3
        class="font-heading text-lg font-semibold text-slate-900 dark:text-white"
      >
        Quick Links
      </h3>
      <ul class="mt-4 space-y-2">
        <li><a href="/" class="footer-link">Home</a></li>
        <li><a href="/about" class="footer-link">About</a></li>
        <li><a href="/services" class="footer-link">Services</a></li>
        <li><a href="/contact" class="footer-link">Contact&nbsp;Us</a></li>
      </ul>
    </nav>

    <!-- Social -->
    <div
      class="flex flex-col items-center md:items-end text-center md:text-right"
    >
      <h3
        class="font-heading text-lg font-semibold text-slate-900 dark:text-white"
      >
        Follow&nbsp;Us
      </h3>
      <div class="mt-4 flex gap-6">
        <!-- Each anchor has sr-only text for screen readers -->
        <a
          href="https://facebook.com/optimizewebsitenow/"
          target="_blank"
          rel="noopener"
          class="social"
          aria-label="Facebook"
          ><span class="sr-only">Facebook</span>
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M22.675 0h-4.05c-3.18 0-5.268 2.09-5.268 5.309v2.453H9.102V12h4.255v12h5.096V12h4.282l.566-4.238h-4.848V5.684c0-1.227.312-2.042 2.047-2.042h2.654V0z"
            ></path>
          </svg>
        </a>
        <a
          href="https://x.com/optimizewebnow"
          target="_blank"
          rel="noopener"
          class="social"
          aria-label="Twitter"
          ><span class="sr-only">Twitter</span>
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M23.954 4.569a10.197 10.197 0 01-2.825.775 4.932 4.932 0 002.163-2.723 9.868 9.868 0 01-3.127 1.184 4.916 4.916 0 00-8.379 4.482A13.94 13.94 0 011.671 3.149a4.818 4.818 0 001.523 6.573 4.904 4.904 0 01-2.23-.616v.061a4.93 4.93 0 003.946 4.827 4.996 4.996 0 01-2.224.084 4.936 4.936 0 004.604 3.417A9.867 9.867 0 010 19.54a13.94 13.94 0 007.548 2.209c9.057 0 14.009-7.496 14.009-13.986 0-.21-.004-.423-.014-.635A10.025 10.025 0 0024 4.59l-.046-.021z"
            ></path>
          </svg>
        </a>
        <a
          href="https://youtube.com/@optimizewebsolutions"
          target="_blank"
          rel="noopener"
          class="social"
          aria-label="YouTube"
          ><span class="sr-only">YouTube</span>
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M23.498 6.186a2.997 2.997 0 00-2.112-2.117C19.773 3.5 12 3.5 12 3.5s-7.773 0-9.386.569A2.997 2.997 0 00.502 6.186 31.06 31.06 0 000 12a31.06 31.06 0 00.502 5.814 2.997 2.997 0 002.112 2.117C4.227 20.5 12 20.5 12 20.5s7.773 0 9.386-.569a2.997 2.997 0 002.112-2.117A31.06 31.06 0 0024 12a31.06 31.06 0 00-.502-5.814zM9.545 15.568V8.432l6.222 3.568-6.222 3.568z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- ───────────── DIVIDER & COPYRIGHT ───────────── -->
  <div class="border-t border-slate-300 dark:border-muted-text/20">
    <p class="mx-auto max-w-screen-xl px-4 py-8 text-center text-sm">
      © {year} Optimize Web Solutions. All Rights&nbsp;Reserved.
    </p>
  </div>
</footer>

<style is:global>
  /* Links */
  .footer-link {
    @apply text-slate-600 dark:text-muted-text transition-colors;
  }
  .footer-link:hover,
  .footer-link:focus {
    @apply text-accent-secondary;
  }

  /* Social icons */
  .social {
    @apply text-slate-800 dark:text-gray-300 transition-colors;
  }
  .social:hover,
  .social:focus {
    @apply text-accent-secondary;
  }
  .social svg {
    transition: transform 0.25s;
  }
  .social:hover svg,
  .social:focus svg {
    transform: scale(1.1);
  }

  /* Remove default SR content from flow */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
