---
// src/components/FinalCTA.astro
---

<section
  id="final-cta"
  class="relative overflow-hidden bg-white dark:bg-background text-center text-background dark:text-white"
>
  <!-- Gradient backdrop sits above section background -->
  <div
    class="absolute inset-0 z-0 bg-gradient-to-tr from-[#E65C00] via-[#E67D00] to-[#D94D00]"
  >
  </div>

  <!-- Top wave merges into section background and overlaps gradient -->
  <div class="absolute top-0 left-0 w-full overflow-hidden leading-[0] z-10">
    <svg
      class="relative block w-[calc(140%+1px)] h-[60px] sm:h-[100px] -translate-x-[20%] fill-white dark:fill-[#121212]"
      viewBox="0 0 1440 100"
      preserveAspectRatio="none"
    >
      <path
        d="M0,100 C240,90 480,20 720,20 C960,20 1200,90 1440,100 L1440,0 L0,0 Z"
      ></path>
    </svg>
  </div>

  <!-- Bottom wave overlaps gradient and transitions into footer -->
  <div
    class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0] z-10 rotate-180"
  >
    <svg
      class="relative block fill-white dark:fill-[#121212] w-[calc(140%+1px)] h-[60px] sm:h-[100px] -translate-x-[20%]"
      viewBox="0 0 1440 100"
      preserveAspectRatio="none"
    >
      <path
        d="M0,100 C240,90 480,20 720,20 C960,20 1200,90 1440,100 L1440,0 L0,0 Z"
      ></path>
    </svg>
  </div>

  <!-- Content with text-shadow for lift (z-index above waves) -->
  <div
    class="relative z-20 mx-auto max-w-2xl px-4 py-[72px] sm:px-6 sm:py-[72px] md:px-8 lg:px-0"
  >
    <style is:global>
      #final-cta h2,
      #final-cta p,
      #final-cta a {
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.4);
      }
    </style>

    <h2
      class="font-heading text-3xl font-extrabold tracking-tight sm:text-4xl lg:text-5xl"
    >
      Donâ€™t Get Lost In Cyberspace
    </h2>

    <p class="mx-auto mt-6 max-w-lg text-base sm:text-lg">
      Turn browsers into buyers with a site built for speed, clarity, and
      conversion.
    </p>

    <a
      href="/contact"
      class="mt-8 inline-flex items-center justify-center rounded-full bg-background/90 px-8 py-3 text-base font-semibold text-[#ff5200] shadow-lg ring-2 ring-background transition-all duration-300 hover:-translate-y-1 hover:bg-transparent hover:text-background hover:shadow-xl dark:hover:text-white"
    >
      Get Help Now
    </a>
  </div>
</section>
